<div class="header">
	<div class="header__desc">
		<h1 class="header__title" aria-describedby="job-title">
			{{ cv.personal["candidate name"] }}
		</h1>
		<h2 class="header__position" id="job-title">
			{{ cv.personal["job title"] }}
		</h2>
		<a
			class="header__link"
			href="{{ cv.personal.pdf["url"] }}"
		>
			{{ cv.personal.pdf["label"] }}
		</a>
	</div>
	<div class="header__contacts">
		<nav>
			<ul class="header__contacts-list">
				<li class="header__contacts-item">
					{{ cv.personal["location"] }}
				</li>
				<li class="header__contacts-item">
					<a
						class="header__contacts-link"
						href="mailto:{{ cv.personal.email["address"] }}"
					>
						{{ cv.personal.email["address"] }}
					</a>
				</li>
				<li class="header__contacts-item">
					<a
						class="header__contacts-link"
						href="{{ cv.personal.link["url"] }}"
					>
						<span class="header__contacts-link-text">
							{{ cv.personal.link["site label"] }}
						</span>
						<span class="header__contacts-link-text header__contacts-link-text--pdf">
							{{ cv.personal.link["pdf label"] }}
						</span>
					</a>
				</li>
				<li class="header__contacts-item">
					<a
						class="header__contacts-link"
						href="{{ cv.personal.portfolio["url"] }}"
					>
						<span class="header__contacts-link-text">
							{{ cv.personal.portfolio["site label"] }}
						</span>
						<span class="header__contacts-link-text header__contacts-link-text--pdf">
							{{ cv.personal.portfolio["pdf label"] }}
						</span>
					</a>
				</li>
			</ul>
		</nav>
	</div>
</div>
