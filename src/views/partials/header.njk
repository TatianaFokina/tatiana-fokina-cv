<div class="cv-header">
	<div class="cv-header__content">
		<a
			class="cv-header__pdf-link"
			href="{{ cv.personal.pdf["url"] }}"
		>
			{{ cv.personal.pdf["label"] }}
		</a>
		<h1 class="cv-header__name" aria-describedby="job-title">
			{{ cv.personal["candidate name"] }}
		</h1>
		<h2 class="cv-header__position" id="job-title">
			{{ cv.personal["job title"] }}
		</h2>
	</div>
		<nav class="cv-header__contacts">
			<ul class="contacts__list">
				<li class="contacts__item">
					{{ cv.personal["location"] }}
				</li>
				<li class="contacts__item">
					<a
						class="contacts__link"
						href="mailto:{{ cv.personal.email["address"] }}"
					>
						{{ cv.personal.email["address"] }}
					</a>
				</li>
				<li class="contacts__item">
					<a
						class="contacts__link"
						href="{{ cv.personal.link["url"] }}"
					>
						<span class="contacts__text">
							{{ cv.personal.link["site label"] }}
						</span>
						<span class="contacts__text contacts__text--print">
							{{ cv.personal.link["pdf label"] }}
						</span>
					</a>
				</li>
				<li class="contacts__item">
					<a
						class="contacts__link"
						href="{{ cv.personal.portfolio["url"] }}"
					>
						<span class="contacts__text">
							{{ cv.personal.portfolio["site label"] }}
						</span>
						<span class="contacts__text contacts__text--print">
							{{ cv.personal.portfolio["pdf label"] }}
						</span>
					</a>
				</li>
			</ul>
		</nav>
</div>
